<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>netstandard2.1</TargetFramework>
		<Nullable>enable</Nullable>
		<PackageProjectUrl>$(RepositoryProjectRoot)/Albatross.CommandLine</PackageProjectUrl>
		<Description>An integration library that simplifies the creation of console program using the System.CommandLine library</Description>
		<PackageReleaseNotes>$(RepositoryProjectRoot)/Albatross.CommandLine/release-notes.md</PackageReleaseNotes>
	</PropertyGroup>
	<ItemGroup>
		<PackageReference Include="Albatross.Config" Version="7.5.11" />
		<PackageReference Include="Albatross.Logging" Version="10.0.1" />
		<PackageReference Include="Albatross.Text" Version="9.0.1" />
		<PackageReference Include="System.CommandLine" Version="2.0.1" />
		<PackageReference Include="Microsoft.Extensions.Hosting" Version="10.0.1" />
		<PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="10.0.1" />
	</ItemGroup>
	<ItemGroup>
		<InternalsVisibleTo Include="Albatross.CommandLine.Test" />
	</ItemGroup>
	<ItemGroup>
		<None Include="..\icon.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="..\LICENSE">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>
	<ItemGroup>
	  <ProjectReference Include="..\Albatross.CommandLine.CodeGen\Albatross.CommandLine.CodeGen.csproj" />
	</ItemGroup>
</Project>